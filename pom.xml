    <modelVersion>4.0.0</modelVersion>

    <groupId>io.github.mbenincasa</groupId>
    <artifactId>java-rest-client</artifactId>
    <version>0.3.3</version>
    <packaging>jar</packaging>
    <name>Java Rest Client</name>
    <description>This library provides a convenient way to interact with RESTful APIs in Java applications. Whether you're building a web service client, integrating with third-party APIs, or developing a microservice architecture, this library aims to simplify the process of making HTTP requests and handling responses.</description>
    <url>https://github.com/MBenincasa/java-rest-client</url>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.18.0</version>
        </dependency>
